# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token
SYNC_COMMANDS=true

# TMDB API Configuration
TMDB_API_KEY=tmdb_api_key
TMDB_API_VERSION=3
TMDB_LANGUAGE=en-US
TMDB_REGION=VN
TMDB_CACHE_TTL=3600

# Database Configuration
DATABASE_URL=database_url
SUPABASE_DB_URL=postgresql_db_url
# For MySQL: mysql+aiomysql://user:password@localhost/filmbot
DATABASE_ECHO=false

# Auto Update Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_INTERVAL_HOURS=1
UPDATE_CHECK_UPCOMING=true
UPDATE_CHECK_POPULAR=true
UPDATE_CHECK_TRENDING=true

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_PING_ROLE=true
NOTIFICATION_EMBED_COLOR=0x00D9FF

# Watchlist Configuration
MAX_WATCHLIST_ITEMS=100
WATCHLIST_REMINDER_ENABLED=true

# Search Configuration
SEARCH_RESULTS_LIMIT=10
SEARCH_CACHE_ENABLED=true

# Rating & Review Configuration
ALLOW_USER_RATINGS=true
ALLOW_USER_REVIEWS=true
MAX_REVIEW_LENGTH=2000

# Recommendation Configuration
RECOMMENDATION_ENABLED=true
RECOMMENDATION_MIN_ITEMS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/filmbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration (Optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600

# API Rate Limiting
API_RATE_LIMIT=40
API_RATE_PERIOD=10

# Embed Configuration
EMBED_FOOTER_TEXT=Auto Update Film Bot
EMBED_AUTHOR_ICON=
EMBED_THUMBNAIL_SIZE=w342
EMBED_POSTER_SIZE=w500
EMBED_BACKDROP_SIZE=w1280

# Feature Flags
FEATURE_COLLECTIONS=true
FEATURE_POLLS=true
FEATURE_TRIVIA=true
FEATURE_STATS=true

# Pagination
PAGINATION_TIMEOUT=120
ITEMS_PER_PAGE=5